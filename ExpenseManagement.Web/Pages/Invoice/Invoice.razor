@page "/app/report/{QueryTypeId:int}"

<div class="container mt-4 mb-5">

	<!-- Action Buttons -->
	<div class="d-flex justify-content-between align-items-center mb-4 no-print">
		<button class="btn btn-sm btn-outline-secondary">
			<i class="bi bi-arrow-left"></i> Back
		</button>

		<button class="btn btn-primary shadow-sm">
			<i class="bi bi-printer"></i> Print
		</button>
	</div>

	<!-- Invoice Card -->
	<div class="card shadow-sm invoice-card">
		<div class="card-body p-4 p-md-5">

			<!-- Header -->
			<div class="row invoice-header pb-3 mb-4">
				<div class="col-6">
					<h2 class="text-primary fw-bold mb-0">EXPENSE MANAGEMENT SYSTEM</h2>
					<small class="text-muted">Financial Activities Report</small>
				</div>
				<div class="col-6 text-end">
					<h4 class="fw-bold text-uppercase">@(ReportName)</h4>
					<p class="mb-0 text-muted">Date: 01 Jan, 2026</p>
				</div>
			</div>

			<!-- Date Range -->
			<div class="row mb-4 text-secondary small">
				<div class="col-12">
					<span class="badge bg-light text-dark border p-2">
						<i class="bi bi-calendar-range"></i>
						Range: 01/01/2026 - 31/01/2026
					</span>
				</div>
			</div>

			<!-- Table -->
			<div class="table-responsive">
				<table class="table table-bordered table-custom">
					<thead>
						<tr>
							<th style="width:50px;">#</th>
							<th>Date</th>
							<th>Category</th>
							<th>Description</th>
							<th>Payment</th>
							<th class="text-end">Amount</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>1</td>
							<td>05/01/2026</td>
							<td>Food</td>
							<td>Lunch Expense</td>
							<td>CASH</td>
							<td class="text-end fw-bold">250.00</td>
						</tr>

						<tr>
							<td>2</td>
							<td>07/01/2026</td>
							<td>Transport</td>
							<td>Bus Fare</td>
							<td>BANK</td>
							<td class="text-end fw-bold">80.00</td>
						</tr>
					</tbody>
				</table>
			</div>

			<!-- Footer -->
			<div class="row mt-4">
				<div class="col-md-7">
					<p class="small text-muted">
						<em>* This is a system generated report.</em>
					</p>
				</div>
				<div class="col-md-5 text-end">
					<div class="total-box">
						<span class="text-muted small text-uppercase d-block">
							Net Total Amount
						</span>
						<h3 class="text-primary fw-bold mb-0">
							330.00 BDT
						</h3>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

@code {

	[Parameter]
	public int QueryTypeId { get; set; }

	private string ReportName { get; set; } = string.Empty;

	protected EnumQueryTypes QueryTypes { get; private set; }

	protected override async Task OnInitializedAsync()
	{
		QueryTypes = (EnumQueryTypes)QueryTypeId;
		if (QueryTypeId > 0)
			ReportName = QueryTypes.GetDisplayName();
	}
}